<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="companyLaunchesViewModel"
            type="com.example.spacexlaunches.ui.company.CompanyLaunchesViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.company.fragment.CompanyLaunchesFragment">

        <LinearLayout
            android:id="@+id/ll_company_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/company_launch_company_title"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_company_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:minHeight="100dp"
            android:text="@{companyLaunchesViewModel.companyData.name +` was founded by ` + companyLaunchesViewModel.companyData.founder + ` in ` + companyLaunchesViewModel.companyData.founded + `. It has now ` + companyLaunchesViewModel.companyData.employees + ` employees, ` + companyLaunchesViewModel.companyData.launchSites + ` launch sites, and is valued at USD ` + companyLaunchesViewModel.companyData.valuation}"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_company_title"
            android:paddingHorizontal="@dimen/standard_half_margin"/>

        <LinearLayout
            android:id="@+id/ll_launches_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_company_info">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/company_launches_launches_title"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_launches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/standard_half_margin"
            app:layout_constraintTop_toBottomOf="@id/ll_launches_title"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
